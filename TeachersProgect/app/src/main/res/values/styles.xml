<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- семейство шрифтов -->
        <item name="android:fontFamily">@font/montserrat_family</item>

        <item name="colorPrimary">@color/baseBlue</item>
        <item name="android:textColorPrimary">@color/baseOrange</item>
        <item name="colorPrimaryDark">@color/backgroundLiteGray</item>
        <item name="colorAccent">@color/baseBlue</item>


        <!--item name="autoCompleteTextViewStyle">@style/Widget.EditText.MyEditTextStyle</item>
        <item name="editTextStyle">@style/Widget.EditText.MyEditTextStyle</item>
        <item name="android:editTextStyle">@style/Widget.EditText.MyEditTextStyle</item-->


        <item name="android:textViewStyle">@style/TextViewSimpleStyle</item>
        <item name="android:editTextStyle">@style/SimpleEditTextUnderlinedStyle</item>
    </style>

    <!-- Стиль текстовых полей ввода -->
    <style name="Widget.EditText.MyEditTextStyle" parent="@android:style/Widget.EditText">

        <item name="android:textColor">@color/baseBlue</item>
        <item name="android:textColorPrimary">@color/baseBlue</item>
        <item name="android:textCursorDrawable">@color/baseBlue</item>


        <item name="editTextBackground">@color/baseGreen</item>
        <item name="background">@color/baseGreen</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/baseGreen</item>

        <!-- выделенный текст -->
        <item name="colorAccent">@color/baseBlue</item>
    </style>

    <!-- Стиль текстов -->
    <style name="TextViewSimpleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextViewSemiBoldStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextViewBoldStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <!-- текксты больших кнопок в "начать урок" -->
    <style name="StartScreenBigButtonsTextStyle" parent="TextViewSemiBoldStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/simple_buttons_text_size</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- текст названий пунктов в редакторе урока -->
    <style name="LessonRedactorDescriptionTextStyle" parent="TextViewSemiBoldStyle">
        <item name="android:textColor">@color/backgroundGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/simple_buttons_text_size</item>
    </style>


    <style name="ButtonSimpleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/simple_buttons_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SimpleEditTextUnderlinedStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/base_background_edit_text_selector</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/simple_buttons_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorHint">@color/backgroundLiteGray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsButtonSimpleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/simple_buttons_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/simple_buttons_height</item>
        <item name="android:background">@drawable/base_background_button_round_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/double_margin</item>
        <item name="android:paddingEnd">@dimen/double_margin</item>
        <item name="android:layout_marginStart">@dimen/double_margin</item>
        <item name="android:layout_marginEnd">@dimen/double_margin</item>
        <item name="android:layout_marginBottom">@dimen/double_margin</item>
    </style>

    <style name="SettingsDividerStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_activity_divider_height</item>
        <item name="android:layout_marginBottom">@dimen/double_margin</item>
        <item name="android:background">@color/backgroundDarkWhite</item>
    </style>

    <style name="myActivityDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- без предка Theme.AppCompat.Light.Dialog не открываются внутренние диалоги -->

        <!-- убираем отступы-вставки по краям -->
        <item name="android:windowBackground">
            @drawable/lesson_redactor_dialog_background_no_insert
        </item>
        <!-- тень позади диалога -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- нажатия за пределами диалога закрывают его -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- цвет точек меню и стрелки-->
        <item name="colorControlNormal">@color/baseBlue</item>
        <!--item name="android:colorControlNormal" tools:targetApi="lollipop">@color/baseBlue</item-->
        <item name="titleTextColor">@color/baseBlue</item>
        <!-- цвет фона -->
        <item name="colorPrimary">@color/backgroundWhite</item>
        <!-- подсветка фона кнопок при нажатии -->
        <item name="colorControlHighlight">@color/backgroundLiteGray</item>


        <item name="android:singleLineTitle" tools:targetApi="o">true</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!--    |||||||||||||||||||||||||||||||||    -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- тема для текстов в выпадающем меню -->
    <style name="MenuTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#A85E4F</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="ThemeYellowToolbarIcons" parent="Theme.AppCompat.Light">
        <!-- цвет иконок навигации -->
        <item name="colorControlNormal">@color/baseOrange</item>
        <!-- color of the menu overflow icon -->
        <!--        <item name="android:textColorSecondary">@color/baseGreen</item>-->
    </style>

    <!-- стиль ActionBar урока -->
    <style name="LessonStyle">
        <!-- цвет иконок навигации -->
        <item name="colorControlNormal">@color/basePink</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/basePink</item>

        <item name="actionMenuTextColor">@color/basePink</item>
    </style>

    <!-- стиль ActionBar редактора кабинетов -->
    <style name="cabinetRedactorStyle">
        <!-- цвет иконок навигации -->
        <item name="colorControlNormal">@color/baseOrange</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/baseOrange</item>

        <item name="actionMenuTextColor">@color/baseOrange</item>
    </style>

</resources>
