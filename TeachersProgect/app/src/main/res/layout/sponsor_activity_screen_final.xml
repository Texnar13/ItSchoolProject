<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBlue"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sponsor_activity_screen_final_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/forth_margin"
        android:layout_marginEnd="@dimen/forth_margin"
        android:layout_marginBottom="@dimen/simple_margin"
        android:gravity="center_vertical"
        android:text="@string/sponsor_activity_title_screen_last"
        android:textColor="@color/backgroundWhite"
        android:textSize="@dimen/text_subtitle_size" />

    <LinearLayout
        android:id="@+id/sponsor_activity_screen_final_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/forth_margin"
        android:layout_marginEnd="@dimen/forth_margin"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:background="@color/baseOrange"
            android:progressDrawable="@drawable/base_progress_bar"
            android:progress="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sponsor_activity_screen_final_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/forth_margin"
        android:layout_marginTop="@dimen/simple_margin"
        android:layout_marginEnd="@dimen/forth_margin"
        android:gravity="center_vertical"
        android:text="@string/sponsor_activity_title_cancel_sub"
        android:textColor="@color/backgroundWhite"
        android:textSize="@dimen/text_subtitle_size" />

</RelativeLayout>