<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_background_dialog_full_round_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/double_margin">

        <ImageView
            android:id="@+id/settings_dialog_edit_locale_cancel_button"
            android:layout_width="@dimen/my_icon_size"
            android:layout_height="@dimen/my_icon_size"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/base_button_close_background_round" />

        <TextView
            style="@style/ButtonSimpleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/double_margin"
            android:text="@string/settings_activity_dialog_edit_locale_title" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/dialog_fragment_layout_settings_edit_absent_types_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/double_margin"
        android:paddingEnd="@dimen/double_margin"
        android:paddingBottom="@dimen/settings_activity_edit_locale_bottom_margin">
        <LinearLayout
            android:id="@+id/settings_dialog_edit_locale_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"/>
    </ScrollView>
</LinearLayout>