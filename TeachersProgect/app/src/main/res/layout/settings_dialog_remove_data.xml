<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_background_dialog_full_round_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/double_margin">

        <ImageView
            android:id="@+id/settings_dialog_remove_data_close"
            android:layout_width="@dimen/my_icon_size"
            android:layout_height="@dimen/my_icon_size"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/base_button_close_background_round" />

        <TextView
            style="@style/ButtonSimpleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/double_margin"
            android:text="@string/settings_activity_dialog_delete_title" />
    </LinearLayout>


    <TextView
        android:id="@+id/settings_dialog_remove_data_confirm_output"
        android:textSize="@dimen/simple_buttons_text_size"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:text="@string/settings_activity_dialog_delete_text_confirm_delete" />

    <EditText
        android:id="@+id/settings_dialog_remove_data_input"
        style="@style/SimpleEditTextUnderlinedStyle"
        android:layout_width="@dimen/text_field_four_simple_symbols_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/simple_margin"
        android:layout_marginRight="@dimen/simple_margin"
        android:layout_marginBottom="@dimen/double_margin"
        android:inputType="number"
        android:paddingBottom="@dimen/simple_margin"
        android:textSize="@dimen/text_subtitle_size" />

    <TextView
        android:id="@+id/settings_dialog_remove_data_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_buttons_height"
        android:background="@drawable/base_background_dialog_bottom_round_blue"
        android:gravity="center"
        android:text="@string/settings_activity_dialog_button_remove_data"
        android:textColor="@color/backgroundWhite"
        android:textSize="@dimen/simple_buttons_text_size" />
</LinearLayout>