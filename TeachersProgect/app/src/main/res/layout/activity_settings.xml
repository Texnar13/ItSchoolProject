            <RelativeLayout
                android:id="@+id/activity_settings_remove_data_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/__background_round_simple_full_dark"
                android:layout_marginBottom="@dimen/double_margin"
                android:layout_marginLeft="@dimen/double_margin"
                android:layout_marginRight="@dimen/double_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/my_buttons_height_size"
                    android:layout_marginLeft="@dimen/double_margin"
                    android:layout_marginRight="@dimen/my_icon_size"
                    android:gravity="center_vertical"
                    android:text="@string/settings_activity_button_remove_data"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_subtitle_size"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/simple_margin"
                    android:layout_width="@dimen/my_icon_size"
                    android:layout_height="@dimen/my_icon_size"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/__button_forward_arrow_dark_gray"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_rate_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/__background_round_simple_full_blue"
                android:layout_marginBottom="@dimen/double_margin"
                android:layout_marginLeft="@dimen/double_margin"
                android:layout_marginRight="@dimen/double_margin"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/geometria_bold"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_buttons_height_size"
                    android:layout_marginLeft="@dimen/double_margin"
                    android:layout_marginRight="@dimen/double_margin"
                    android:gravity="center"
                    android:text="@string/settings_activity_button_rate_us"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="@dimen/text_simple_size"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
