<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="com.learning.texnar13.teachersprogect.CabinetRedactorActivity">

    <RelativeLayout
        android:id="@+id/redactor_out_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackGround">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/redactor_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/cabinet_redactor_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="@string/cabinet_redactor_activity_text_help"
            android:textColor="@color/colorBackGroundDark"
            android:textSize="10pt" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"

        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/activity_cabinet_redactor_instrumental_image_background"
                android:layout_width="@dimen/cabinet_redactor_button_add_size"
                android:layout_height="@dimen/cabinet_redactor_button_add_size"
                android:layout_centerInParent="true"
                android:background="@drawable/cabinet_redactor_add_desk_button" />

            <ImageView
                android:id="@+id/activity_cabinet_redactor_instrumental_image"
                android:layout_width="@dimen/cabinet_redactor_button_add_image_size"
                android:layout_height="@dimen/cabinet_redactor_button_add_image_size"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_vector_plus" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
