<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_fragment_layout_edit_grade"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_fragment_layout_edit_grade_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/_dialog_head_background_white_underlined"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded"/>

    <LinearLayout
        android:id="@+id/dialog_fragment_layout_edit_grade_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_below="@+id/dialog_fragment_layout_edit_grade_head"
        android:background="@drawable/base_background_dialog_bottom_round_wite"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>