<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_month_lesson_pattern_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/half_margin"
    android:layout_marginBottom="@dimen/half_margin"
    android:layout_marginStart="@dimen/one_and_half_margin"
    android:layout_marginEnd="@dimen/one_and_half_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/start_screen_current_lesson_pattern_start_time"
            style="@style/TextViewSemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08.30"
            android:textColor="@color/start_screen_top_sheet_lesson_active_text_color"
            android:textSize="@dimen/shedule_month_lessons_time_size" />

        <TextView
            android:id="@+id/start_screen_current_lesson_pattern_end_time"
            style="@style/TextViewSemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09.30"
            android:textColor="@color/start_screen_top_sheet_lesson_active_text_color"
            android:textSize="@dimen/shedule_month_lessons_time_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shedule_month_lesson_top_bottom_margin"
        android:layout_marginBottom="@dimen/shedule_month_lesson_top_bottom_margin"
        android:orientation="vertical"
        android:paddingStart="@dimen/shedule_month_lesson_texts_margin">

        <TextView
            android:id="@+id/start_screen_current_lesson_pattern_subject"
            style="@style/TextViewSemiBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Математика"
            android:textColor="@color/start_screen_top_sheet_lesson_active_text_color"
            android:textSize="@dimen/shedule_month_lessons_content_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/start_screen_current_lesson_pattern_class"
                style="@style/TextViewSemiBoldStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8а"
                android:textColor="@color/start_screen_top_sheet_lesson_active_text_color"
                android:textSize="@dimen/shedule_month_lessons_content_text_size" />

            <TextView
                android:id="@+id/start_screen_current_lesson_pattern_cabinet"
                style="@style/TextViewSemiBoldStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="304 каб."
                android:textColor="@color/start_screen_top_sheet_lesson_active_text_color"
                android:textSize="@dimen/shedule_month_lessons_content_text_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>