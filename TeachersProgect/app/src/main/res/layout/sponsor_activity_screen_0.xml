<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premiumAddBackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sponsor_activity_screen_0_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/forth_margin"
        android:layout_marginEnd="@dimen/forth_margin"
        android:layout_marginBottom="@dimen/simple_margin"
        android:gravity="center"
        android:text="@string/sponsor_activity_title_screen_0"
        android:textColor="@color/backgroundWhite"
        android:textSize="@dimen/text_subtitle_size" />

    <LinearLayout
        android:id="@+id/sponsor_activity_screen_0_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/base_background_dialog_full_round_white"
        android:orientation="vertical"
        android:padding="@dimen/double_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/simple_margin">

            <ImageView
                android:id="@+id/dialog_fragment_layout_settings_edit_time_button_close"
                android:layout_width="@dimen/my_icon_size"
                android:layout_height="@dimen/my_icon_size"
                app:srcCompat="@drawable/base_button_close_background_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/simple_margin"
                android:text="@string/settings_activity_dialog_edit_time_title"
                android:textColor="#000000"
                android:textSize="@dimen/text_subtitle_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_fragment_layout_settings_edit_time_time_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/simple_margin"
            android:paddingRight="@dimen/simple_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/simple_margin"
                android:text="9. 15:35-16:15"
                android:textColor="#000000"
                android:textSize="@dimen/text_subtitle_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/simple_margin"
                android:text="9. 15:35-16:15"
                android:textColor="#000000"
                android:textSize="@dimen/text_subtitle_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_fragment_layout_settings_edit_time_button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/simple_margin"
            android:background="@drawable/base_background_button_round_gray"
            android:gravity="center"
            android:padding="@dimen/simple_margin"
            android:text="@string/settings_activity_dialog_edit_time_button_add_lesson"
            android:textColor="#000000"
            android:textSize="@dimen/text_subtitle_size" />
    </LinearLayout>
</RelativeLayout>