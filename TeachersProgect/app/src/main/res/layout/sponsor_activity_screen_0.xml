<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/forth_margin"
    android:paddingEnd="@dimen/forth_margin">

    <TextView
        android:id="@+id/sponsor_activity_screen_0_title"
        style="@style/TextViewSemiBoldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sponsor_activity_title_screen_0"
        android:textColor="@color/premium_text_color"
        android:textSize="@dimen/premium_activity_messages_text_size" />


    <ImageView
        android:id="@+id/sponsor_activity_screen_0_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/forth_margin"
        android:layout_marginBottom="@dimen/forth_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/sponsor_activity_content_image_preview_0_lessons_count" />

</LinearLayout>