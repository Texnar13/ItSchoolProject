<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lesson_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:behavior_saveFlags="all"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <FrameLayout
        android:id="@+id/activity_lesson_bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <FrameLayout
            android:id="@+id/activity_lesson_bottom_sheet_title_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="00"
            android:background="#22FF0000" />

        <TextView
            style="@style/ButtonSimpleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Привет, я текст" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <EditText
            style="@style/ButtonSimpleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22FF00FF"
            android:gravity="center"
            android:text="Привет, я скрытый текст" />
    </ScrollView>


</LinearLayout>