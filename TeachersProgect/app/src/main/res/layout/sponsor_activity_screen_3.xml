<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_background"
    android:paddingStart="@dimen/forth_margin"
    android:paddingEnd="@dimen/forth_margin"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:id="@+id/sponsor_activity_screen_3_title"
        style="@style/TextViewSemiBoldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sponsor_activity_title_screen_3"
        android:textColor="@color/premium_text_color"
        android:textSize="@dimen/premium_activity_messages_text_size" />

    <ImageView
        android:id="@+id/sponsor_activity_screen_3_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/forth_margin"
        android:layout_marginBottom="@dimen/forth_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/sponsor_activity_content_image_preview_3_grades_types" />

</LinearLayout>