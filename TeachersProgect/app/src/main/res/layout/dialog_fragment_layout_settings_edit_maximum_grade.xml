<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/_dialog_head_background_dark">

        <ImageView
            android:id="@+id/dialog_fragment_layout_settings_edit_maximum_grade_button_cancel"
            android:layout_margin="@dimen/simple_margin"
            android:layout_width="@dimen/my_icon_size"
            android:layout_height="@dimen/my_icon_size"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/__button_close"/>
        <TextView
            android:layout_marginRight="@dimen/simple_margin"
            android:fontFamily="@font/geometria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/settings_activity_title_max_answer"
            android:textColor="@color/backgroundWhite"
            android:textSize="@dimen/text_subtitle_size" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/_dialog_bottom_background_white">


        <EditText
            android:id="@+id/dialog_fragment_layout_settings_edit_maximum_grade_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/simple_margin"
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_marginRight="@dimen/simple_margin"
            android:layout_marginBottom="@dimen/simple_margin"
            android:gravity="center"
            android:hint="@string/settings_activity_hint_max_answer"
            android:inputType="number"
            android:textSize="@dimen/text_subtitle_size" />

        <LinearLayout
            android:id="@+id/dialog_fragment_layout_settings_edit_maximum_grade_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/simple_margin"
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_marginRight="@dimen/simple_margin"
            android:layout_marginBottom="@dimen/simple_margin"
            android:background="@drawable/_button_round_background_green"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginRight="@dimen/simple_margin"
                android:layout_marginBottom="@dimen/half_margin"
                android:text="@string/button_save"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_subtitle_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>