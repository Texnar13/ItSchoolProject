<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/base_subjects_dialog_edit_list_element_circle"
        android:layout_width="@dimen/my_icon_small_size"
        android:layout_height="@dimen/my_icon_small_size"
        app:srcCompat="@drawable/learners_and_grades_activity_abs_checkbox_background_empty" />

    <EditText
        android:id="@+id/base_subjects_dialog_edit_list_element_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_margin"
        android:background="@color/transparent"
        android:hint="@string/learners_and_grades_out_activity_dialog_hint_subject_name"
        android:inputType="textCapWords"
        android:padding="0dp"
        android:text="dfjdj"
        android:textColor="@color/text_color_simple"
        android:textSize="@dimen/text_simple_size" />
</LinearLayout>