<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/simple_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/settings_dialog_edit_time_template_single_time_line_lesson_number"
        style="@style/ButtonSimpleStyle"
        android:layout_width="@dimen/text_field_two_simple_symbols_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="0dp"
        android:layout_marginTop="@dimen/simple_margin"
        android:layout_marginBottom="@dimen/simple_margin"
        android:text="1."
        android:textColor="@color/text_color_not_active" />

    <EditText
        android:id="@+id/settings_dialog_edit_time_template_single_time_line_start_hour"
        android:layout_width="@dimen/text_field_two_simple_symbols_width"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center_vertical|end"
        android:inputType="number"
        android:padding="0dp"
        android:textColor="@color/text_color_simple" />

    <TextView
        style="@style/ButtonSimpleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dp"
        android:text="@string/settings_activity_dialog_text_time_colon" />

    <EditText
        android:id="@+id/settings_dialog_edit_time_template_single_time_line_start_minute"
        android:layout_width="@dimen/text_field_two_simple_symbols_width"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center_vertical|start"
        android:inputType="number"
        android:padding="0dp"
        android:textColor="@color/text_color_simple" />

    <TextView
        style="@style/ButtonSimpleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/settings_activity_dialog_text_time_dash" />

    <EditText
        android:id="@+id/settings_dialog_edit_time_template_single_time_line_end_hour"
        android:layout_width="@dimen/text_field_two_simple_symbols_width"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center_vertical|end"
        android:inputType="number"
        android:padding="0dp"
        android:textColor="@color/text_color_simple" />

    <TextView
        style="@style/ButtonSimpleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="@string/settings_activity_dialog_text_time_colon" />


    <EditText
        android:id="@+id/settings_dialog_edit_time_template_single_time_line_end_minute"
        android:layout_width="@dimen/text_field_two_simple_symbols_width"
        android:layout_height="match_parent"

        android:background="@color/transparent"
        android:gravity="center_vertical|start"
        android:inputType="number"
        android:padding="0dp"
        android:textColor="@color/text_color_simple" />


    <ImageView
        android:id="@+id/settings_dialog_edit_time_template_single_time_line_delete_button"
        android:layout_width="@dimen/base_classic_arrow_immutable_size"
        android:layout_height="@dimen/base_classic_arrow_immutable_size" />

</LinearLayout>


