<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    tools:context="com.learning.texnar13.teachersprogect.startScreen.StartScreenActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/start_screen_button_my_classes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/start_screen_image_view_my_learners_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/start_screen_button_margins"
                android:layout_marginLeft="@dimen/start_screen_button_margins"
                android:layout_marginRight="@dimen/start_screen_button_margins"
                android:layout_marginStart="@dimen/start_screen_button_margins"
                android:layout_marginTop="@dimen/start_screen_button_margins"
                app:srcCompat="@drawable/start_screen_3_1_blue_spot" />

            <TextView
                android:id="@+id/start_screen_text_view_my_learners"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/start_screen_image_view_my_learners_background"
                android:layout_alignStart="@+id/start_screen_image_view_my_learners_background"
                android:layout_marginLeft="@dimen/start_screen_text_margins"
                android:layout_marginStart="@dimen/start_screen_text_margins"
                android:layout_toLeftOf="@+id/start_screen_image_view_my_learners"
                android:layout_toStartOf="@+id/start_screen_image_view_my_learners"
                android:gravity="center_vertical"
                android:text="@string/start_screen_activity_title_my_learners"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_title_size" />

            <ImageView
                android:id="@+id/start_screen_image_view_my_learners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/start_screen_image_margins"
                android:layout_marginRight="@dimen/start_screen_image_margins"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/start_screen_3_1_girl" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_screen_button_my_cabinets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/start_screen_image_view_my_cabinets_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/start_screen_button_margins"
                android:layout_marginLeft="@dimen/start_screen_button_margins"
                android:layout_marginRight="@dimen/start_screen_button_margins"
                android:layout_marginStart="@dimen/start_screen_button_margins"
                android:layout_marginTop="@dimen/start_screen_button_margins"
                app:srcCompat="@drawable/start_screen_3_2_yellow_spot" />

            <ImageView
                android:id="@+id/start_screen_image_view_my_cabinets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/start_screen_image_margins"
                android:layout_marginStart="@dimen/start_screen_image_margins"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/start_screen_3_2_cabinet" />

            <TextView
                android:id="@+id/start_screen_text_view_my_cabinets"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/start_screen_text_margins"
                android:layout_marginRight="@dimen/start_screen_text_margins"
                android:layout_alignEnd="@+id/start_screen_image_view_my_cabinets_background"
                android:layout_alignRight="@+id/start_screen_image_view_my_cabinets_background"
                android:layout_toEndOf="@+id/start_screen_image_view_my_cabinets"
                android:layout_toRightOf="@+id/start_screen_image_view_my_cabinets"
                android:gravity="center_vertical|right"
                android:text="@string/start_screen_activity_title_my_cabinets"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_title_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_screen_button_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/start_screen_image_view_my_schedule_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/start_screen_button_margins"
                android:layout_marginLeft="@dimen/start_screen_button_margins"
                android:layout_marginRight="@dimen/start_screen_button_margins"
                android:layout_marginStart="@dimen/start_screen_button_margins"
                android:layout_marginTop="@dimen/start_screen_button_margins"
                app:srcCompat="@drawable/start_screen_3_3_green_spot" />

            <TextView
                android:id="@+id/start_screen_text_view_my_schedule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/start_screen_image_view_my_schedule_background"
                android:layout_alignStart="@+id/start_screen_image_view_my_schedule_background"
                android:layout_marginLeft="@dimen/start_screen_text_margins"
                android:layout_marginStart="@dimen/start_screen_text_margins"
                android:layout_toLeftOf="@+id/start_screen_image_view_my_schedule"
                android:layout_toStartOf="@+id/start_screen_image_view_my_schedule"
                android:gravity="center_vertical"
                android:text="@string/start_screen_activity_title_my_schedule"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_title_size" />

            <ImageView
                android:id="@+id/start_screen_image_view_my_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/start_screen_image_margins"
                android:layout_marginRight="@dimen/start_screen_image_margins"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/start_screen_3_3_calendar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_screen_button_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/start_screen_image_view_current_lesson_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/start_screen_button_margins"
                android:layout_marginLeft="@dimen/start_screen_button_margins"
                android:layout_marginRight="@dimen/start_screen_button_margins"
                android:layout_marginStart="@dimen/start_screen_button_margins"
                android:layout_marginTop="@dimen/start_screen_button_margins"
                app:srcCompat="@drawable/start_screen_3_4_pink_spot" />

            <ImageView
                android:id="@+id/start_screen_image_view_current_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/start_screen_image_margins"
                android:layout_marginStart="@dimen/start_screen_image_margins"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/start_screen_3_4_book" />

            <TextView
                android:id="@+id/start_screen_text_view_current_lesson"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/start_screen_text_margins"
                android:layout_marginRight="@dimen/start_screen_text_margins"
                android:layout_alignEnd="@+id/start_screen_image_view_current_lesson_background"
                android:layout_alignRight="@+id/start_screen_image_view_current_lesson_background"
                android:layout_toEndOf="@+id/start_screen_image_view_current_lesson"
                android:layout_toRightOf="@+id/start_screen_image_view_current_lesson"
                android:gravity="center_vertical|right"
                android:text="@string/start_screen_activity_title_current_lesson"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_title_size" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_screen_button_reload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/start_screen_image_view_settings_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/start_screen_button_margins"
                android:layout_marginEnd="@dimen/start_screen_button_margins"
                android:layout_marginLeft="@dimen/start_screen_button_margins"
                android:layout_marginRight="@dimen/start_screen_button_margins"
                android:layout_marginStart="@dimen/start_screen_button_margins"
                android:layout_marginTop="@dimen/start_screen_button_margins"
                app:srcCompat="@drawable/start_screen_3_5_magenta_spot" />

            <TextView
                android:id="@+id/start_screen_text_view_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/start_screen_image_view_settings_background"
                android:layout_alignStart="@+id/start_screen_image_view_settings_background"
                android:layout_marginLeft="@dimen/start_screen_text_margins"
                android:layout_marginStart="@dimen/start_screen_text_margins"
                android:layout_toLeftOf="@+id/start_screen_image_view_settings"
                android:layout_toStartOf="@+id/start_screen_image_view_settings"
                android:gravity="center_vertical"
                android:text="@string/start_screen_activity_title_settings"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_title_size" />

            <ImageView
                android:id="@+id/start_screen_image_view_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/start_screen_image_margins"
                android:layout_marginRight="@dimen/start_screen_image_margins"
                android:adjustViewBounds="true"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/start_screen_3_5_settings" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>