<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/settings_dialog_edit_types_absent_active_container_longedittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_buttons_height"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/settings_activity_dialog_new_absent_type_long_title_hint"
        android:inputType="text|textCapSentences"
        android:padding="0dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/settings_dialog_edit_types_absent_active_container_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_buttons_height"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/settings_activity_dialog_new_absent_type_title_hint"
        android:inputType="text|textCapSentences"
        android:padding="0dp"
        android:singleLine="true" />

    <LinearLayout
        android:id="@+id/settings_dialog_edit_types_absent_active_container_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_buttons_height"
        android:background="@drawable/base_background_button_bottom_round_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settings_dialog_edit_types_absent_active_container_remove_button"
            style="@style/ButtonSimpleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/settings_activity_dialog_button_remove"
            android:textColor="@color/text_color_inverse" />

        <TextView
            android:id="@+id/settings_dialog_edit_types_absent_active_container_save_button"
            style="@style/ButtonSimpleStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_save"
            android:textColor="@color/text_color_inverse" />

    </LinearLayout>
</LinearLayout>