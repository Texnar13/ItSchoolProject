<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_background_dialog_head_round_lgray">

        <ImageView
            android:id="@+id/dialog_fragment_layout_settings_edit_maximum_grade_button_cancel"
            android:layout_marginLeft="@dimen/simple_margin"
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_marginRight="@dimen/double_margin"
            android:layout_marginBottom="@dimen/simple_margin"
            android:layout_width="@dimen/my_icon_size"
            android:layout_height="@dimen/my_icon_size"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/base_button_close_background_round"/>
        <TextView
            android:layout_marginRight="@dimen/double_margin"
            android:fontFamily="@font/geometria_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/settings_activity_title_max_answer"
            android:textColor="@color/backgroundDarkGray"
            android:textSize="@dimen/text_subtitle_size" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_background_dialog_bottom_round_wite">


        <EditText
            android:id="@+id/dialog_fragment_layout_settings_edit_maximum_grade_edit_text"
            android:layout_width="@dimen/text_field_four_simple_symbols_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/simple_margin"
            android:paddingBottom="@dimen/simple_margin"
            android:layout_marginLeft="@dimen/simple_margin"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_marginRight="@dimen/simple_margin"
            android:layout_marginBottom="@dimen/simple_margin"
            android:background="@color/backgroundLiteGray"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/text_subtitle_size" />

        <LinearLayout
            android:id="@+id/dialog_fragment_layout_settings_edit_maximum_grade_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/simple_margin"
            android:layout_marginTop="@dimen/simple_margin"
            android:layout_marginRight="@dimen/simple_margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:background="@drawable/base_background_button_circle_orange"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/forth_margin"
                android:layout_marginTop="@dimen/simple_margin"
                android:layout_marginRight="@dimen/forth_margin"
                android:layout_marginBottom="@dimen/simple_margin"
                android:text="@string/button_save"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_subtitle_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>