<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBlue"
    android:orientation="vertical"
    tools:context=".sponsor.SponsorActivity">

    <TextView
        android:id="@+id/sponsor_activity_top_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:text="@string/sponsor_activity_title_app_name"
        android:textColor="@color/backgroundWhite"
        android:textSize="@dimen/text_subtitle_size" />

    <TextView
        android:id="@+id/sponsor_activity_top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sponsor_activity_top_main_text"
        android:layout_marginBottom="@dimen/double_margin"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:text="@string/sponsor_activity_title_tag"
        android:textColor="@color/baseOrange"
        android:textSize="@dimen/text_title_size" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/sponsor_activity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sponsor_activity_tab"
        android:layout_below="@+id/sponsor_activity_top_text" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sponsor_activity_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sponsor_activity_go_to_last"
        app:tabBackground="@drawable/sponsor_activity_tab_dot_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <TextView
        android:id="@+id/sponsor_activity_go_to_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/forth_margin"
        android:background="@drawable/sponsor_activity_background_button_round_gold"
        android:paddingStart="@dimen/double_margin"
        android:paddingTop="@dimen/simple_margin"
        android:paddingEnd="@dimen/double_margin"
        android:paddingBottom="@dimen/simple_margin"
        android:text="@string/sponsor_activity_button_go_to_last_screen"
        android:textColor="@color/backgroundWhite"
        android:textSize="@dimen/text_simple_size" />

</RelativeLayout>