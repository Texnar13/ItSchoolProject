<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackGround"
    tools:context="com.learning.texnar13.teachersprogect.ScheduleMonthActivity">
    <!--android:background="#fdffdf"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/schedule_month_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/calendar_left_arrow"
            android:layout_alignTop="@+id/schedule_month_date_text"
            android:layout_toLeftOf="@+id/schedule_month_date_text"
            android:layout_alignBottom="@+id/schedule_month_date_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textColor="#000000"
            android:textAllCaps="true"
            android:id="@+id/schedule_month_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"

            android:text="TextView"
            android:textSize="@dimen/text_title_size" />

        <ImageView
            android:id="@+id/schedule_month_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/schedule_month_date_text"
            android:layout_alignTop="@+id/schedule_month_date_text"
            android:layout_toRightOf="@+id/schedule_month_date_text"
            android:clickable="true"
            app:srcCompat="@drawable/calendar_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/schedule_month_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    </LinearLayout>
</LinearLayout>
